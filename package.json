{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-scripts": "2.1.5"
  },
  "scripts": {
    "prestart": "yarn tailwind:css",
    "start": "npm-run-all -p watch-css start-js",
    "prestart-js": "yarn tailwind:css",
    "start-js": "react-scripts start",
    "prebuild": "yarn tailwind:css",
    "build": "npm-run-all build-css build-js",
    "prebuild-js": "yarn tailwind:css",
    "build-js": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build-css": "node-sass-chokidar --source-map true src/styles/styles.sass src/styles/styles.css --output-style compressed",
    "watch-css": "node-sass-chokidar --source-map true src/styles/styles.sass src/styles/styles.css --output-style compressed --watch",
    "tailwind:css": "tailwind build src/styles/tailwind.src.css -c tailwind.js -o src/styles/tailwind.css",
    "predeploy": "yarn build",
    "deploy": "scp -r ./build/* root@138.68.51.205:~/vv_build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "formik": "^1.5.1",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "sass-convert": "^0.5.2",
    "tailwindcss": "^0.7.4"
  }
}
